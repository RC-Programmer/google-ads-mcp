FROM python:3.11-slim

WORKDIR /app

# Copy all files
COPY . .

# Install the package with all dependencies
RUN pip install --no-cache-dir .

# Install additional dependencies for sheets sync
RUN pip install --no-cache-dir google-api-python-client google-auth requests

ENV MCP_TRANSPORT=sse
ENV PORT=8080

EXPOSE 8080

CMD ["python", "-m", "ads_mcp.server"]
